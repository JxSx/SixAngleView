<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.yolo.sixangleview.SixAngleView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_find_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:clickable="true"
            android:padding="0dp"
            android:background="@drawable/find_service_selector" />

        <ImageView
            android:id="@+id/iv_find_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/find_course_selector"
            android:clickable="true"
            android:padding="0dp" />

        <ImageView
            android:id="@+id/iv_find_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/find_topic_selector"
            android:clickable="true"
            android:padding="0dp" />

        <ImageView
            android:id="@+id/iv_find_experts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/find_experts_selector"
            android:clickable="true"
            android:padding="0dp" />

        <ImageView
            android:id="@+id/iv_find_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/find_business_selector"
            android:clickable="true"
            android:padding="0dp" />

        <ImageView
            android:id="@+id/iv_find_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/find_action_selector"
            android:clickable="true"
            android:padding="0dp" />
    </com.yolo.sixangleview.SixAngleView>

</FrameLayout>